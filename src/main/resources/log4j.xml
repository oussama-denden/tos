<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

	<!--
		=====================================================================
		Log4j Configuration
		=====================================================================
	-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<!-- ============================== -->
	<!-- Append messages to the console -->
	<!-- ============================== -->
	
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p %d{ISO8601} %c.%M - %m%n" />
		</layout>
	</appender>
	
	<!-- ============================== -->
	<!-- Append messages to the File -->
	<!-- ============================== -->
	
        <appender name="ROLL" class="org.apache.log4j.rolling.RollingFileAppender">
                <!-- The active file to log to -->
                <param name="file" value="/tmp/opale.log" />
                <param name="append" value="true" />
                <param name="encoding" value="UTF-8" />

                <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
                        <!-- The file to roll to, this is a fairly intelligent parameter, if the file
                        ends in .gz, it gzips it, based on the date stamp it rolls at that time, 
                        default is yyyy-MM-dd, (rolls at midnight)
                        See: http://logging.apache.org/log4j/companions/extras/apidocs/org/apache/log4j/rolling/TimeBasedRollingPolicy.html -->
                        <param name="FileNamePattern" value="/applogs/opale.%d.log.gz" />
                </rollingPolicy>

                <layout class="org.apache.log4j.PatternLayout">
                        <!-- The log message pattern -->
                        <param name="ConversionPattern" value="%5p %d{ISO8601} %c.%M - %m%n" />
                </layout>
        </appender>
	
	<logger name="log4j.logger.org.springframework.ws">
		<level value="DEBUG" />
	</logger>
	
	<logger name="log4j.logger.org.springframework.xml">
		<level value="DEBUG" />
	</logger>
	
	<logger name="log4j.logger.openjpa">
		<level value="INFO" />
	</logger>


	<!-- Limit the org.apache category to ERROR as its INFO is verbose -->
<!-- 	<category name="org">
		<priority value="ERROR" />
		</category> -->
	
	<!-- ======================= -->
	<!-- Setup the Root category -->
	<!-- ======================= -->
	<root>
		<priority value="INFO" />
		<appender-ref ref="CONSOLE" /> 
		<appender-ref ref="ROLL" />
	</root>


</log4j:configuration>